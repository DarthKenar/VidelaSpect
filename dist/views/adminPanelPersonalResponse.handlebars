<div id="search_results" class="overflow-x-auto">
  {{>messages}}
  <table class="table table-xs">
    <thead>
      <tr>
        <th></th> 
        <th>Nombre</th> 
        <th>DNI</th> 
        <th>Cargo</th> 
        <th title="Registros totales por día.">Reg. x día</th>
        <th>Administrador</th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody>
        {{#each personal}}
            <tr>
                <th>{{this.id}}</th> 
                <td>{{this.name}}</td> 
                <td>{{this.dni}}</td> 
                <td>{{this.position}}</td>
                <td>{{this.dailyEntries}}</td> 
                <td>
                  {{#if this.admin}}
                    Si
                  {{else}}
                    No
                  {{/if}}
                </td>
                <td class="flex flex-row">
                  <a href="/admin/panel/personal/update/{{this.id}}" class="btn btn-warning btn-sm mr-1">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                  EDITAR
                  </a>
                  <form action="/admin/panel/personal/delete/{{this.id}}" method="POST">
                    <button type="submit" class="btn btn-error btn-sm" onclick="return confirm('¿Estás seguro de que quieres eliminar a {{this.name}} del personal?')">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                      ELIMINAR
                    </button>
                  </form>
                </td>
            </tr>
        {{/each}}
    </tbody> 
    <tfoot>
      <tr>
        <th></th> 
        <th>Nombre</th> 
        <th>DNI</th> 
        <th>Cargo</th> 
        <th title="Registros totales por día.">Reg. x día</th>
        <th>Administrador</th>
        <th>Acción</th>
      </tr>
    </tfoot>
  </table>
</div>