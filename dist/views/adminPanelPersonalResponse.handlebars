<div id="search_results" class="overflow-x-auto">
  {{>messages}}
  <table class="table table-xs">
    <thead>
      <tr>
        <th></th> 
        <th>Nombre</th> 
        <th>DNI</th> 
        <th>Cargo</th> 
        <th title="Registros totales por día.">Reg. x día</th>
        <th>Administrador</th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody>
        {{#each personal}}
            <tr>
                <th>{{this.id}}</th> 
                <td>{{this.name}}</td> 
                <td>{{this.dni}}</td> 
                <td>{{this.position}}</td>
                <td>{{this.dailyEntries}}</td> 
                <td>
                  {{#if this.admin}}
                    Si
                  {{else}}
                    No
                  {{/if}}
                </td>
                <td class="flex flex-row">
                  <a href="/admin/panel/personal/update/{{this.id}}" class="btn btn-warning btn-sm mr-1">EDITAR</a>
                  <form action="/admin/panel/personal/delete/{{this.id}}" method="POST">
                    <button type="submit" class="btn btn-error btn-sm" onclick="return confirm('¿Estás seguro de que quieres eliminar a {{this.name}} del personal?')">ELIMINAR</button>
                  </form>
                </td>
            </tr>
        {{/each}}
    </tbody> 
    <tfoot>
      <tr>
        <th></th> 
        <th>Nombre</th> 
        <th>DNI</th> 
        <th>Cargo</th> 
        <th title="Registros totales por día.">Reg. x día</th>
        <th>Administrador</th>
        <th>Acción</th>
      </tr>
    </tfoot>
  </table>
</div>