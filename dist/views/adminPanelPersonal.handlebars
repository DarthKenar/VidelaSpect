<menu class="flex justify-between my-10">
  <a href="/admin/panel" class="btn btn-ghost">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-corner-up-left"><polyline points="9 14 4 9 9 4"></polyline><path d="M20 20v-7a4 4 0 0 0-4-4H4"></path></svg>
  VOLVER
  </a>
  <form action="/admin/panel/personal/search" method="GET">
    <div class="join">
      <div>
        <input id="input" name="input" value="{{input}}" class="input input-bordered join-item" placeholder="Search"/>
      </div>
      <select id="select" name="select" class="select select-bordered join-item">
        <option value="name" {{#if_eq select "name"}} selected {{/if_eq}}>Nombre</option>
        <option value="dni" {{#if_eq select "dni"}} selected {{/if_eq}}>DNI</option>
      </select>
      <div class="indicator">
        <button class="btn join-item">Search</button>
      </div>
    </div>
  </form>
  <a href="/admin/panel/personal/create" class="btn btn-success">CREAR</a>
</menu>
<div class="overflow-x-auto">
  {{>messages}}
  <table class="table table-xs">
    <thead>
      <tr>
        <th></th> 
        <th>Nombre</th> 
        <th>DNI</th> 
        <th>Cargo</th> 
        <th title="Registros totales por día.">Reg. x día</th>
        <th>Administrador</th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody>
        {{#each personal}}
            <tr>
                <th>{{this.id}}</th> 
                <td>{{this.name}}</td> 
                <td>{{this.dni}}</td> 
                <td>{{this.position}}</td>
                <td>{{this.dailyEntries}}</td> 
                <td>
                  {{#if this.admin}}
                    Si
                  {{else}}
                    No
                  {{/if}}
                </td>
                <td class="flex flex-row">
                  <a href="/admin/panel/personal/update/{{this.id}}" class="btn btn-warning btn-sm mr-1">EDITAR</a>
                  <form action="/admin/panel/personal/delete/{{this.id}}" method="POST">
                    <button type="submit" class="btn btn-error btn-sm" onclick="return confirm('¿Estás seguro de que quieres eliminar a {{this.name}} del personal?')">ELIMINAR</button>
                  </form>
                </td>
            </tr>
        {{/each}}
    </tbody> 
    <tfoot>
      <tr>
        <th></th> 
        <th>Nombre</th> 
        <th>DNI</th> 
        <th>Cargo</th> 
        <th title="Registros totales por día.">Reg. x día</th>
        <th>Administrador</th>
        <th>Acción</th>
      </tr>
    </tfoot>
  </table>
</div>