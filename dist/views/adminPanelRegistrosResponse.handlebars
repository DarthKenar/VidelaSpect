<script src="https://unpkg.com/htmx.org@1.9.11"></script>
<div id="search_results" class="overflow-x-auto">
  {{>messages}}
  <table class="table table-xs">
    <thead>
      <tr>
        <th></th> 
        <th>Nombre</th> 
        <th>Fecha</th> 
        <th>Hora</th>
        <th>Foto</th> 
      </tr>
    </thead>
    <tbody>
        {{#each registros}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.personal_name}}</td> 
                <td>{{this.fecha}}</td> 
                <td>{{this.hora}}</td>
                <td><a onclick="getImage({{this.id}})" class="btn btn-sm btn-info"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-camera"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg></a></td>
            </tr>
        {{/each}}
    </tbody> 
    <tfoot>
      <tr>
        <th></th> 
        <th>Nombre</th> 
        <th>Fecha</th> 
        <th>Hora</th>
        <th>Foto</th> 
      </tr>
    </tfoot>
  </table>
</div>